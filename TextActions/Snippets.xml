<?xml version="1.0"?>
<action-recipes>
	
	<snippet id="com.gridlee.TextActions.Sugar.Zone" category="tools.actions.text.snippets.sugardev">
		<title>Zone</title>
		<text>
<![CDATA[<zone name="${1:zone.name}">
    ${2:<expression>${3:regex}</expression>}
    ${4:<starts-with>
        <expression>${5:regex}</expression>
    </starts-with>
    <ends-with>
        <expression>${6:regex}</expression>
    </ends-with>}
    ${7:<subzones>
        $0
    </subzones>}
</zone>]]>
        </text>
		<syntax-context>Sugar, Sugar *</syntax-context>
		<text-trigger>zone</text-trigger>
	</snippet>
    
    <snippet id="com.gridlee.TextActions.Sugar.Snippet" category="tools.actions.text.snippets.sugardev">
		<title>Snippet</title>
		<text>
<![CDATA[<snippet id="$1" category="$2">
    <title>$3</title>
    <text>
${4:snippet text}
    </text>
    <syntax-context>${5:selector}</syntax-context>
    <text-trigger>$0</text-trigger>
</snippet>]]>
        </text>
		<syntax-context>Sugar, Sugar *</syntax-context>
		<text-trigger>snippet</text-trigger>
	</snippet>
    
    <snippet id="com.gridlee.TextActions.Sugar.Behavior" category="tools.actions.text.snippets.sugardev">
    <title>Behavior</title>
    <text>
<![CDATA[<behavior>
    <append-${1:static|dynamic}>
        ${2:<matched-suffix>${3:regex}</matched-suffix>}
        ${4:<transform-into>${0:snippet}</transform-into>}
    </append-${1:static|dynamic}>
</behavior>]]>
    </text>
    <syntax-context>Sugar, Sugar *</syntax-context>
    <text-trigger>behavior</text-trigger>
</snippet>
        
    
</action-recipes>